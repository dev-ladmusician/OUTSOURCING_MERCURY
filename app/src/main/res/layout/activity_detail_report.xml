<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_report_container">

    <LinearLayout
        android:id="@+id/feed_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/PRESSED_BLUE">

            <ImageView
                android:id="@+id/detail_report_btn_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_back"/>

            <Button
                android:id="@+id/detail_report_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/TRANSPARENT"
                android:textColor="@color/WHITE"
                android:text="삭제"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/report_content_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/img_test"/>

                    <ImageView
                        android:id="@+id/report_img_position"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignTop="@+id/report_content_img"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_position"/>
                    <TextView
                        android:id="@+id/report_content_position"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/report_img_position"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/WHITE"
                        android:text="" />
                    <TextView
                        android:id="@+id/report_content_date"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignTop="@+id/report_content_img"
                        android:layout_alignRight="@+id/report_content_img"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/WHITE"
                        android:textSize="11dp"
                        android:text="" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/report_content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:text="아이들과 첨성대 앞에서"
                        android:textColor="#222"/>

                    <ImageView
                        android:id="@+id/report_content_devider"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/report_content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_report_content_devider"/>

                    <RelativeLayout
                        android:layout_below="@+id/report_content_devider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/report_content_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이들과 첨성대 앞에서"
                            android:textSize="12dp"
                            android:textColor="@color/TEXT_COLOR"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
