<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/add_feed_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.ActivityMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/bg_main_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/join_btn_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/btn_back"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="@dimen/main_title_container_padding_side"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/main_title_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김동진님"
                    android:textStyle="bold"
                    android:textColor="@color/WHITE"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/main_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_title_sub_title_margin_top"
                    android:layout_below="@+id/main_title_user_name"
                    android:textColor="@color/FEED_COUNT"
                    android:textSize="@dimen/main_title_sub_title_size"
                    android:text="게시물 추가하기"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/BG_BASE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_feed_title_cotainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_feed_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="목록명을 입력하세요"
                        android:textColorHint="@color/IDENTITY_BLUE"
                        android:textSize="15dp"
                        android:paddingLeft="10dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_feed_people_cotainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/add_feed_title_cotainer">

                    <EditText
                        android:id="@+id/add_feed_people"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="참여인원"
                        android:textColorHint="@color/IDENTITY_BLUE"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:paddingLeft="10dp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/add_feed_started"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="15dp"
                    android:text="시작일"
                    android:gravity="center_vertical"
                    android:textColor="@color/IDENTITY_BLUE"
                    android:background="@drawable/style_content"
                    android:layout_below="@+id/add_feed_people_cotainer"/>

                <TextView
                    android:id="@+id/add_feed_ended"
                    android:layout_below="@+id/add_feed_started"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:text="마감일"
                    android:gravity="center_vertical"
                    android:textColor="@color/IDENTITY_BLUE"
                    android:background="@drawable/style_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/add_feed_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/LIGHT_BLUE"
                    android:background="@drawable/style_btn"
                    android:text="추가하기"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
