<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_item_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_height"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <!--Bottom View For Right to Left-->

    <LinearLayout
        android:id="@+id/feed_swipe_menu_container"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:weightSum="1">

        <!--<TextView-->
            <!--android:id="@+id/feed_swipe_menu_edit"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="69dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="#bdbdbd"-->
            <!--android:gravity="center"-->
            <!--android:text="수정"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="#fff" />-->

        <TextView
            android:id="@+id/feed_swipe_menu_delete"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:background="#F44336"
            android:gravity="center"
            android:text="삭제"
            android:textStyle="bold"
            android:textColor="#fff" />
    </LinearLayout>


    <!-- Top View,  Row itemView of RecyclerView -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_height"
        android:paddingLeft="@dimen/feed_side_padding"
        android:paddingRight="@dimen/feed_side_padding">

        <LinearLayout
            android:id="@+id/feed_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/feed_seq"
                    android:textColor="@color/FEED_NUM"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/feed_side_padding"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/feed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="9월 경주 체험학습"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/feed_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="12dp"
                    android:text="2015.09.08 ~ 09.10"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/line_item_devider"/>
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>






