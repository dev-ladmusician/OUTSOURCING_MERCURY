<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/report_padding"
    android:background="@drawable/style_report_container">

    <LinearLayout
        android:id="@+id/feed_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/report_content_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/img_test"/>

            <ImageView
                android:id="@+id/report_img_position"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/report_content_img"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_position"/>
            <TextView
                android:id="@+id/report_content_geo_position"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/report_img_position"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/WHITE"
                android:textSize="11dp"
                android:text="지오그래픽 위치" />
            <TextView
                android:id="@+id/report_content_date"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignTop="@+id/report_content_img"
                android:layout_alignRight="@+id/report_content_img"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/WHITE"
                android:textSize="11dp"
                android:text="2015.07.01" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/report_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:text="아이들과 첨성대 앞에서"
                android:textColor="#222"/>

            <TextView
                android:id="@+id/report_content_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="13dp"
                android:layout_alignParentRight="true"
                android:text="첨성대"
                android:textColor="@color/TEXT_COLOR"/>

            <ImageView
                android:id="@+id/report_content_devider"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/report_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_report_content_devider"/>

            <RelativeLayout
                android:layout_below="@+id/report_content_devider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:id="@+id/report_content_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="촬영자: 김동진 선생님"
                    android:textColor="@color/TEXT_COLOR"/>

                <TextView
                    android:id="@+id/report_content_description"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/report_content_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이들과 첨성대 앞에서"
                    android:textSize="12dp"
                    android:textColor="@color/TEXT_COLOR"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
